{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  },
  "exclude": [
    "node_modules"
  ]
}